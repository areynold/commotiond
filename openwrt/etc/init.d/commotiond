#!/bin/sh /etc/rc.common

#DEBUG=echo
START=19
STOP=91

boot() {
  mkdir -m 0755 -p /var/run/commotion
}

start() {
  local bind profiles pid statedir id
  local args="-n"

  config_cb() {  
    local type="$1"
    local name="$2"
    
    case "$type" in
      "daemon")
      	option_cb() {
      	  local name="$1"
      	  local value="$2"
        
          case "$name" in
            "bind")
              append args "-b $value"
              ;;
            "profiles")
              append args "-f $value"
              ;;
            "pid")
              append args "-p $value"
              ;;
            "statedir")
              append args "-s $value"
              ;;
          esac
        }
        ;;
      "node")
      	option_cb() {
      	  local name="$1"
      	  local value="$2"
        
          case "$name" in
            "id")
              append args "-i $value"
              ;;
          esac
        }
        ;;
    esac
  }
  config_load commotion
  
  $DEBUG service_start /usr/sbin/commotiond $args
}

stop() {
  $DEBUG service_stop /usr/sbin/commotiond 
}
